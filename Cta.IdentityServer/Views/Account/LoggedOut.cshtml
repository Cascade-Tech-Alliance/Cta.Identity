@model Cta.IdentityServer.Models.Account.LoggedOutViewModel
@{
    // set this so the layout rendering sees an anonymous user
    ViewData["signed-out"] = true;
    ViewData["Title"] = "Signed Out";
}


<div class="page-header logged-out">
    <br /><br/><br />
    <hr style="width: 100%;" />
    @*<h3>@ViewData["Title"].</h3>*@
    <h4>You are now signed out.</h4><br />
    @if (Model.PostLogoutRedirectUri != null)
    {
        <div>
            Click <a class="PostLogoutRedirectUri" href="@Model.PostLogoutRedirectUri">here</a> to return to <span>@Model.ClientName</span>.
        </div>
    }
    @if (Model.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" frameborder="0" class="signout" src="@Model.SignOutIframeUrl"></iframe>
    }
</div>
@section scripts
    {
    @if (Model.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}
